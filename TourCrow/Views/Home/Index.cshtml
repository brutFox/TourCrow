@{
    Layout = "~/Views/Shared/_NavBar.cshtml";
}

    <div class="flexslider">
        <ul class="slides">

            <li>
                <img src="~/Content/images/main_image/slide/slide_3.jpg" alt="Special 1">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5 col-lg-4">
                            <div class="flex-caption visible-lg">
                                <span class="price">Featured</span>
                                <h3 class="title">Sundarbans, Khulna</h3>
                                <p>
                                    The Sundarbans is a natural region in the Bengal region comprising Eastern India and Bangladesh. It is the largest single block of tidal halophytic mangrove forest in the world.
                                </p>
                                @Html.ActionLink("Add to Plan", "Index", "Plan", new { search = "Sundarbans" }, new { @class = "slider-btn" })
                            </div>

                        </div>
                    </div>
                </div>
            </li>

            <li>
                <img src="~/Content/images/main_image/slide/slide_4.jpg" alt="Special 1">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5 col-lg-4">
                            <div class="flex-caption visible-lg">
                                <span class="price">Featured</span>
                                <h3 class="title">Cox's Bazar</h3>
                                <p>
                                    Cox's Bazar is a town, a fishing port and district headquarters in Bangladesh. It is one of the world's longest uninterrupted natural sandy sea beaches, The beach in Cox's Bazar is an unbroken 125 km sandy sea beach with a gentle slope.
                                </p>
                                @Html.ActionLink("Add to Plan", "Index", "Plan", new { search = "Cox's+Bazar" }, new { @class = "slider-btn" })
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li>
                <img src="~/Content/images/main_image/slide/slide_1.jpg" alt="Special 1">
